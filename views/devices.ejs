    <div class="container">
        <h1 class="center-align">Your Devices</h1>

        <div id="popupNotification" class="popup">
            <span id="popupMessage"></span>
        </div>

        <div class="row">
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Living Room Light</span>
                        <a class="waves-effect waves-light btn toggle-btn" data-device="light" data-status="off">Turn
                            On</a>
                        <div class="input-field">
                            <label class="time-placeholder" for="light_on_time">Turn On Time</label>
                            <input type="time" id="light_on_time">
                        </div>
                        <div class="input-field">
                            <label class="time-placeholder" for="light_off_time">Turn Off Time</label>
                            <input type="time" id="light_off_time">
                        </div>
                        <a class="waves-effect waves-light btn schedule-btn" data-device="light">Schedule</a>
                    </div>
                </div>
            </div>

            <div class="col s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Air Conditioner</span>
                        <a class="waves-effect waves-light btn toggle-btn" data-device="ac" data-status="off">Turn
                            On</a>
                        <div class="input-field">
                            <label class="time-placeholder" for="ac_on_time mr-10">Turn On Time</label>
                            <input type="time" id="ac_on_time">
                        </div>
                        <div class="input-field">
                            <label class="time-placeholder" for="ac_off_time">Turn Off Time</label>
                            <input type="time" id="ac_off_time">
                        </div>
                        <a class="waves-effect waves-light btn schedule-btn" data-device="ac">Schedule</a>
                    </div>
                </div>
            </div>

            <div class="col s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Heater</span>
                        <a class="waves-effect waves-light btn toggle-btn" data-device="heater" data-status="off">Turn
                            On</a>
                        <div class="input-field">
                            <label class="time-placeholder" for="heater_on_time">Turn On Time</label>
                            <input type="time" id="heater_on_time">
                        </div>
                        <div class="input-field">
                            <label class="time-placeholder" for="heater_off_time">Turn Off Time</label>
                            <input type="time" id="heater_off_time">
                        </div>
                        <a class="waves-effect waves-light btn schedule-btn" data-device="heater">Schedule</a>
                    </div>
                </div>
            </div>
            <div class="container schedule-table">
                <h2 class="center-align">Device Status and Schedules</h2>
                <button class="get-schedule-btn waves-effect waves-light btn">Get Schedules</button>

                <table class="highlight centered striped">
                    <thead>
                        <tr>
                            <th>Device</th>
                            <th>Status</th>
                            <th>On Time</th>
                            <th>Off Time</th>
                        </tr>
                    </thead>
                    <tbody id="device-status-table">

                    </tbody>
                </table>
            </div>
        </div>
